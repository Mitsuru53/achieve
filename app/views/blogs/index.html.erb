<div class="container">
    <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
        <p><%= notice %></p>
        <h1>ブログ一覧</h1>
         <%= link_to "ブログを作成する", new_blog_path, class:'btn btn-default' %>
        <% @blogs.each do |blog| %>
        <div class="row">
          <%= raise =>
         <h4><strong><%= profile_img(blog.user) %><i class="fa fa-comment" aria-hidden="true" style="font-size:26px;"></i>
<%= blog.title %></strong></h4>
         <p><%= blog.content %> by <%= blog.user.name %></p>
         <%= link_to "ブログを編集する",edit_blog_path(blog.id),class:'btn btn-default btn-sm btn-success' %>
         <%= link_to "ブログを削除する",blog_path(blog.id), method: :delete, data: {confirm: '本当に削除していいですか？'},class:'btn btn-sm btn-danger'  %>
        </div>
        <% end %>
    </div>
</div>
<div id="page-top-btn" class="page-top-btn">
    <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>
<script src="https://use.fontawesome.com/ab4c6c721d.js"></script>
