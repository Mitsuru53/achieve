<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% f.hidden_field :user_id %>
  <% f.hidden_field :charge_id %>

  <div class="container">
    <div class="row">
        <%= f.label :タイトル %> :
        <%= f.text_field :title %>
    </div><br />

    <div class="row">
        <%= f.label :内容 %> :
        <%= f.text_area :content %>
    </div><br />

    <div class="row">
        <%= f.label :締め切り %> :
        <%= f.datetime_select :deadline %>
    </div><br />

    <div class="row">
        <%= f.label :状態 %> :
        <%= f.select :status, Task.statuses.keys %>
    </div><br />

    <div class="actions">
        <%= f.submit %>
    </div>
  </div>
<% end %>
