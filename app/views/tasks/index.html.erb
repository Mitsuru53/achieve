<p id="notice"><%= notice %></p>

<h1>タスク一覧</h1>
<div class="task-table table-responsive">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>User</th>
        <th>Title</th>
        <th>Content</th>
        <th>Deadline</th>
        <th>Charge</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.user.name %></td>
          <td><%= task.title %></td>
          <td><%= task.content %></td>
          <td><%= task.deadline.strftime("%Y年%m月%d日 %H時%M分") %></td>
          <td><%= task.charge.name %></td>
          <td><%= task.status %></td>
          <td><%= link_to 'Show', task %></td>
          <td><%= link_to 'Edit', edit_task_path(task) %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<br>

<%= link_to '新規タスク作成', new_task_path,class:"fa fa-tasks fa-lg" %>
