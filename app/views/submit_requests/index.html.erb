<p id="notice"><%= notice %></p>

<h1>依頼タスク一覧</h1>
<div class="requestTaskTable">
  <table class="table-striped table-request">
    <thead>
      <tr>
        <th>ユーザー</th>
        <th>タスク</th>
        <th>メッセージ</th>
        <th>依頼主</th>
        <th>状態</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @submit_requests.each do |submit_request| %>
        <tr>
          <td><%= submit_request.user.name %></td>
          <td><%= submit_request.task.title %></td>
          <td><%= submit_request.message %></td>
          <td><%= submit_request.request_user_id %></td>
          <td><%= submit_request.status %></td>
          <td><%= link_to '詳細', submit_request %></td>
          <td><%= link_to '編集', edit_submit_request_path(submit_request) %></td>
          <td><%= link_to '削除', submit_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<br>

